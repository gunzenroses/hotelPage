{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "Main/*": ["src/*"],
      "Libs/*": ["src/libs/*"],
      "Fonts/*": ["src/assets/fonts/*"],
      "Images/*": ["src/assets/images/*"],
      "Scripts/*": ["src/scripts/*"],
      "Styles/*": ["src/assets/styles/*"],
      "Components/*": ["src/components/*"],
      "Pages/*": ["src/pages/*"],
    }
  },
  "include": ["./src", "validation.js"],
  "exclude": ["node_modules"]
}