mixin checkbox-item({valueText = '', inputName = '', checked = false, checkboxTitle = '', modifier = '', checkboxDescription = ''})
  -
    const itemClass = modifier === 'rich'
      ? 'checkbox-item checkbox-item_rich'
      : 'checkbox-item';

    const titleClass = modifier === '' 
      ? 'checkbox-item__title' 
      : `checkbox-item__title checkbox-item__title_${ modifier }`;

  label(class = itemClass)
    input(
      type = 'checkbox'
      value = valueText
      name = inputName
      checked = checked).checkbox-item__real
    span.checkbox-item__fake
    if modifier === 'rich'
      span.checkbox-item__form
        span(class = titleClass)= checkboxTitle
        span.checkbox-item__description!= checkboxDescription
    else 
      span(class = titleClass)= checkboxTitle