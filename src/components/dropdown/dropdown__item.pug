mixin dropdown__item(itemDataType, itemText, itemDataOrder)
  .dropdown__item_expanded.js-dropdown__item_expanded(data-type=itemDataType)
    .dropdown__text!= itemText
    .dropdown__minus.js-dropdown__minus.button_disabled - 
    .dropdown__number.js-dropdown__number(data-order=itemDataOrder) 0 
    .dropdown__plus.js-dropdown__plus +