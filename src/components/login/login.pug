include ../textfield/textfield.pug

mixin login(theme = '')
  - 
    const className = theme === ''
      ? 'login' 
      : `login login_in_${ theme }`;

  div(class = className)
    +textfield({ 
      modifier: 'email',
      placeholder: 'Email',
      name: 'email',
      autofocus: false 
    })
    +textfield({ 
      modifier: 'password',
      placeholder: 'Пароль',
      name: 'password'
    })