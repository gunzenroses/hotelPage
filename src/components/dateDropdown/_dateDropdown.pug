mixin dateDropdownRange(containerId, calendarId, labelText, inputValue, dropdownClassShow)
    div(class="dateRangeSelector" id=containerId)
        div(class="dropdown__calendar dropdown__content" + dropdownClassShow)
            +calendar(calendarId)
        .container_medium.dropdown__init
            h3.label!= labelText
            .date__range
                input(type="text" value=inputValue 
                name="checkin-checkout" placeholder="ДД.ММ - ДД.ММ"
                maxlength="15" data-range="date-range" readonly)
        



//-dropdownDateFiltered
    .date__container_medium
        .widget
            label(for="date_range_1").label Dropdown
            .dropdown__date_masked
                input(type="text" id="date_range_1" value="19 авг - 23 авг"
                name="dateRange_1" placeholder="ДД.ММ - ДД.ММ"
                maxlength="15" data-rule="date-range")
            .error

//-dropdownDate
    .date__container_small
        .widget
            label(for="dropdown_date").label Date dropdown
            .dropdown__date_masked
                input(type="text" id="dropdown_date" value="" 
                name="dateMasked" placeholder="ДД.ММ.ГГГГ" 
                masked="true" 
                maxlength="10" data-rule="date")
            .error

