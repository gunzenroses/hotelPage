mixin checkbox-expandable({ dropdownTitleName, dropdownClassShow = "" })
  - 
    var { checkboxContent } = 
    require("Components/checkbox-expandable/checkbox-expandable.json");

  .checkbox-expandable.js-checkbox-expandable
    .checkbox-expandable__dropdown
      div(class = `js-checkbox-expandable__content ${ dropdownClassShow }`)
        fieldset.checkbox-expandable__content
          each checkboxItem in checkboxContent
            - var { checkboxName, ifChecked, checkboxTitle } = checkboxItem
            label.checkbox-expandable__item
              input(
                type = "checkbox" 
                name = checkboxName 
                checked = ifChecked).checkbox-expandable__real
              span.checkbox-expandable__fake
              span.checkbox-expandable__title!= checkboxTitle
      .checkbox-expandable__button.js-checkbox-expandable__init
        .dropdown__title!= dropdownTitleName
