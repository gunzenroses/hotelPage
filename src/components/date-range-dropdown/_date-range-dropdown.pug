include ../calendar/_calendar.pug

mixin dateRangeSeparate(calendarId, labelText_1, inputValue_1, labelText_2, inputValue_2, dropdownClassShow = "")
  div(class="date-range__selector")
    div(class="dropdown__calendar dropdown__content" + dropdownClassShow)
      +calendar(calendarId)
    .dataRange__container.dropdown__init
      +dateDropdownSmall(labelText_1, "checkin", inputValue_1, "checkin")
      +dateDropdownSmall(labelText_2, "checkout", inputValue_2, "checkout")

mixin dateDropdownSmall(labelText, inputName, inputValue, dateDataType)
  .container_small
    h3.label!= labelText
    .date__range
      input(type="text" value=inputValue 
      name=inputName placeholder="ДД.ММ.ГГГГ"
      maxlength="10" data-range=dateDataType readonly)

mixin dateRangeCommon(calendarId, labelText, inputValue, dropdownClassShow)
  div(class="date-range__selector")
    div(class="dropdown__calendar dropdown__content" + dropdownClassShow)
      +calendar(calendarId)
    .dataRange__container_common.dropdown__init
      h3.label!= labelText
      .date__range
        input(type="text" value=inputValue 
        name="checkin-checkout" placeholder="ДД.ММ - ДД.ММ"
        maxlength="15" data-range="date-range" readonly)