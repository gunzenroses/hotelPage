mixin buttonContainer()
    .button-container
        .label Buttons
        .button-row
            +buttonItem("button_filled", "Click me")
            +buttonItem("button_filled", "Click me")
            +buttonItem("button_white", "Click me")
            +buttonItem("button_white", "Click me")
        .button-row
            +buttonItem("button_clear", "Click me")
            +buttonItem("button_clear", "Click me")
        .button-row
            +buttonItem("button_formaction", "Click me")
            
            
mixin buttonItem(buttonClass, buttonText)
    button(class="" + buttonClass)= buttonText

