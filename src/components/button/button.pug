mixin buttonContainer()
    .button-container
        .label Buttons
        .button-row
            +buttonItem("button_filled", "Click me")
            +buttonItem("button_filled", "Click me")
            +buttonLink("Click me", "")
            +buttonLink("Click me", "")
        .button-row
            +buttonItem("button_clear", "Click me")
            +buttonItem("button_clear", "Click me")
        .button-row
            +buttonSubmit("Click me")
            


mixin buttonLink(buttonText, buttonOnclick="#")
    div(class="button_white")
        a(class="button_link" href = buttonOnclick)= buttonText

mixin buttonSubmit(buttonText)
    button(class="button_submit" type="submit")= buttonText

mixin buttonItem(buttonClass, buttonText)
    button(class="" + buttonClass)= buttonText

