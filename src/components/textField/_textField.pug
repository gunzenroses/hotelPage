//- mixins for formElements (with labels)

mixin nameContainer(labelText, labelRightText, inputId)
    .widget
        +label(labelText, labelRightText)
        +name(inputId)

mixin surnameContainer(labelText, labelRightText, inputId)
    .widget
        +label(labelText, labelRightText)
        +surname(inputId)

mixin birthdayContainer(labelText, labelRightText, inputId)
    .widget
        +label(labelText, labelRightText)
        +birthday(inputId)

mixin emailContainer(labelText, labelRightText, inputId)
    .widget
        +label(labelText, labelRightText)
        +email(inputId)

mixin emailSubscribeContainer(labelText, labelRightText, inputId)
    .widget
        +label(labelText, labelRightText)
        +emailSubscribe(inputId)



//-mixins without labels

mixin name(inputId)
    +text (inputId, "textfield", "", "This is awesome", "name", "20", autofocus=false)

mixin surname(inputId)
    +text (inputId, "textfield", "", "This is awesome", "surname", "20", autofocus=false)

mixin birthday(inputId)
    +text(inputId, "textfield_birthday", "ДД.ММ.ГГГГ", "", "birthday", "10", autofocus=false)

mixin email(inputId)
    +text (inputId, "textfield", "Email", "", "email", "30", autofocus=false)

mixin emailSubscribe(inputId)
    +text (inputId, "textfield_email", "Email", "", "email", "30", autofocus=false)



//-mixins basic

mixin label(labelText, labelRightText)
    .label!= labelText
    .label_right= labelRightText

mixin text(inputId, inputClass, placeholder, valueText, nameText, maxText, autofocus=false)
    div(class="" + inputClass)
        input(type="text" id=inputId placeholder=placeholder, 
            value=valueText name=nameText data-rule=nameText, 
            maxlength=maxText autofocus=autofocus)
    .error



