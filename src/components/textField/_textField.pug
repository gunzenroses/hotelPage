//- mixins for formElements (with labels)

mixin nameContainer(labelText, labelRightText, valueText)
    .widget
        +label(labelText, labelRightText)
        +name(valueText)

mixin surnameContainer(labelText, labelRightText, valueText)
    .widget
        +label(labelText, labelRightText)
        +surname(valueText)

mixin birthdayContainer(labelText, labelRightText)
    .widget
        +label(labelText, labelRightText)
        +birthday()

mixin emailContainer(labelText, labelRightText)
    .widget
        +label(labelText, labelRightText)
        +email()

mixin emailSubscribeContainer(labelText, labelRightText)
    .widget
        +label(labelText, labelRightText)
        +emailSubscribe()

mixin loginContainer(labelText, labelRightText)
    .widget
        +label(labelText, labelRightText)
        +login()
