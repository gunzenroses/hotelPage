mixin button-rate__item({ inputName="", inputValue=1, checkedNum=1 })
  if checkedNum <= inputValue
    input(
      type="radio" 
      name=inputName 
      value=inputValue 
      checked=true 
      id=`${ inputName }-${ inputValue }`).button-rate__real
    label(
      for=`${ inputName }-${ inputValue }`).button-rate__fake
  else
    input(
      type="radio" 
      name=inputName 
      value=inputValue 
      checked=false 
      id=`${ inputName }-${ inputValue }`).button-rate__real
    label(
      for=`${ inputName}-${ inputValue }`).button-rate__fake