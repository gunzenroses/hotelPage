mixin room-carousel({ roomPictures, nameForPictures })
  - var buttonPrevClass = "room-carousel__button room-carousel__button_prev";
  - var buttonNextClass = "room-carousel__button room-carousel__button_next";
  - var carouselRealClass = "room-carousel__radio-real";
  - let counter = 1;
  .room-carousel.js-room-carousel
    .room-carousel__radio.js-room-carousel__radio 
      for picture in roomPictures
        label.room-carousel__element
          if counter === 1
            input(
              type="radio" 
              checked="checked" 
              name=nameForPictures 
              value=`picture_${ counter++ }`
              class=`${ carouselRealClass } js-room-carousel__radio-real`)
          else
            input(
              type="radio" 
              name=nameForPictures 
              value=`picture_${ counter++ }`
              class=`${ carouselRealClass } js-room-carousel__radio-real`)
          span.room-carousel__radio-fake
    .room-carousel__pictures.js-room-carousel__pictures
      for picture in roomPictures
        .room-carousel__pic
          img(
            src= picture 
            alt="room pictures").room-carousel__img
    .room-carousel__buttons
      div(class=`${ buttonPrevClass } js-room-carousel__button_prev`)
      div(class=`${ buttonNextClass } js-room-carousel__button_next`)