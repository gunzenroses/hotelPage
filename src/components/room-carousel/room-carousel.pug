mixin room-carousel({ roomPictures, nameForPictures })
  -
    const modPrev = 'prev';
    const modNext = 'next'
    const classButton = 'room-carousel__button';
    const classRadioReal = 'room-carousel__radio-real';
    const classButtonPrev = `${ classButton }_${ modPrev }`;
    const classButtonNext = `${ classButton }_${ modNext }`;
    const carouselRealClass = `${ classRadioReal } js-${ classRadioReal }`;
    let counter = 1;

  .room-carousel.js-room-carousel
    .room-carousel__radio.js-room-carousel__radio 
      for picture in roomPictures
        label.room-carousel__element
          if counter === 1
            input(
              type = 'radio' 
              checked = 'checked' 
              name = nameForPictures 
              value = `picture_${ counter++ }`
              class = carouselRealClass)
          else
            input(
              type = 'radio' 
              name = nameForPictures 
              value = `picture_${ counter++ }`
              class = carouselRealClass)
          span.room-carousel__radio-fake
    .room-carousel__pictures.js-room-carousel__pictures
      for picture in roomPictures
        .room-carousel__pic
          img(
            src = picture 
            alt = 'room pictures').room-carousel__img
    .room-carousel__buttons
      div(class = `${ classButton } ${ classButtonPrev } js-${ classButtonPrev }`)
      div(class = `${ classButton } ${ classButtonNext } js-${ classButtonNext }`)