include ../checkbox-item/checkbox-item.pug

mixin rich-checkbox({ checkboxName = '', containerText = '' })
  - 
    var checkboxItems = [
      {
        checkboxName: 'accessibility',
        checkboxValue: 'wide corridor',
        checkboxTitle: 'Широкий коридор',
        checkboxDescription: 'Ширина коридоров в номере <br> не менее 91 см.'
      },
      {
        checkboxName: 'accessibility',
        checkboxValue: 'help for disabled',
        checkboxTitle: 'Помощник для инвалидов',
        checkboxDescription: 
          'На 1 этаже вас встретит специалист <br> и проводит до номера.'
      }
    ];

  .rich-checkbox
    .rich-checkbox__label!= containerText
    fieldset.rich-checkbox__list
      each checkboxItem in checkboxItems
        - 
          var { 
            checkboxName, 
            checkboxValue, 
            checkboxTitle, 
            checkboxDescription } = checkboxItem;
        +checkbox-item({
          valueText: checkboxValue,
          inputName: checkboxName,
          checkboxTitle: checkboxTitle,
          modifier: 'rich',
          checkboxDescription: checkboxDescription
        })