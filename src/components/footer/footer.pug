include ../logo/logo.pug
include ../navlink/navlink.pug
include ../social-nets/social-nets.pug
include ../textfield/_type/_subscribe/textfield_type_subscribe.pug

mixin footer({ theme="main" })
  - var navigations = ["О нас", "Новости", "Служба поддержки", "Услуги"]
  - var abouts = ["О сервисе", "Наша команда", "Вакансии", "Инвесторы"]
  - var supports = ["Соглашения", "Сообщества", "Связь с нами"]
  - var footerText = "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»";
  - 
    var footerCopywriteClass = theme === "main"
      ? "footer__basement" : `footer__basement footer__basement_in-${ theme }`
  -
    var footerNavbarClass = theme === "main"
      ? "footer__navbar" : `footer__navbar footer__navbar_in-${ theme }`
  - 
    var infoVisibleClass = theme === "details" 
      ? `footer__info footer__info_in-${ theme }` : "footer__info"

  footer.footer
    div(class= footerNavbarClass)
      if theme === "landing"
        div(class=`footer__logo footer__logo_in-${ theme }`)
          +logo()
          .footer__text!= footerText
      else if theme === "signin"
        div(class=`footer__logo footer__logo_in-${ theme }`)
          +logo()
          .footer__text!= footerText
      else
        div(class=`footer__logo`)
          +logo()
          .footer__text!= footerText
      div(class= infoVisibleClass)
        .footer__navigation
          h3.footer__title Навигация
          ul.footer__links
            for navigation in navigations
              +navlink({
                buttonText: navigation, 
                buttonOnclick: "./some-address",
                navlinkModificator: "footer"
              })
        .footer__about
          h3.footer__title О нас
          ul.footer__links
            for about in abouts
              +navlink({
                buttonText: about,
                buttonOnclick: "./some-address",
                navlinkModificator: "footer"
              })
        .footer__support
          h3.footer__title Служба поддержки
          ul.footer__links
            for support in supports
              +navlink({
                buttonText: support,
                buttonOnclick: "./some-address",
                navlinkModificator: "footer"
              })
      .footer__info-hidden
        .footer__navigation
          h3.footer__title.js-expand__init Навигация
          ul.footer__dropdown.js-expand__content
            for navigation in navigations
              +navlink({ 
                buttonText: navigation, 
                buttonOnclick: "./some-address"
              })
        .footer__about
          h3.footer__title.js-expand__init О нас
          ul.footer__dropdown.js-expand__content
            for about in abouts
              +navlink({
                buttonText: about,
                buttonOnclick: "./some-address"
              })
        .footer__support
          h3.footer__title.js-expand__init Служба поддержки
          ul.footer__dropdown.js-expand__content
            for support in supports
              +navlink({ 
                buttonText: support,
                buttonOnclick: "./some-address"
              })
      .footer__subscription
        h3.footer__title Подписка
        p.footer__special-offer Получайте специальные предложения и новости сервиса
        form.footer__form.js-footer__form(method="get" action="./registration.html")
          +textfield_type_subscribe()
    div(class= footerCopywriteClass)
      .footer__basement-text Copyright © 2018 Toxin отель. Все права защищены.
      .footer__social-nets
        +social-nets(theme)