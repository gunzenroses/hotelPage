include ../../../navlink/navlink.pug

mixin footer__info_hidden(navigations, abouts, supports)
  .footer__info_hidden
    .footer__navigation
      h3.footer__title.js-expand__init Навигация
      ul.footer__dropdown_in-navigation.js-expand__content
        for navigation in navigations
          +navlink({ 
            buttonText: navigation, 
            buttonOnclick: "./some-address"
          })
    .footer__about
      h3.footer__title.js-expand__init О нас
      ul.footer__dropdown_in-about.js-expand__content
        for about in abouts
          +navlink({
            buttonText: about,
            buttonOnclick: "./some-address"
          })
    .footer__support
      h3.footer__title.js-expand__init Служба поддержки
      ul.footer__dropdown_in-support.js-expand__content
        for support in supports
          +navlink({ 
            buttonText: support,
            buttonOnclick: "./some-address"
          })