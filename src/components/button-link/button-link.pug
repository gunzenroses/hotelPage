mixin button-link({ buttonText = '', buttonHref = './some-address', className = '' })
  if className === ''
    div(class = 'button-link')
      a(class = 'button-link__ref' href = buttonHref)= buttonText
  else if className === 'colored'
    a(class = 'button-link button-link_type_colored' 
      href = buttonHref)= buttonText
  else if className === 'registration'
    a(class = 'button-link button-link_type_registration' 
      href = buttonHref)= buttonText
  else
    div(class = `button-link button-link_type_${ className }`)
      a(class = 'button-link__ref' href = buttonHref)= buttonText