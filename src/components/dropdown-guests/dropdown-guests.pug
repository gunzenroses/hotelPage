include ../dropdown-item/dropdown-item.pug

mixin dropdown-guests({ labelText="", dropdownClassShow="", itemNumbers=[0, 0, 0], labelRightText="" })
  - var buttonSubmitClass = "dropdown__button dropdown__button_type_submit";
  - var buttonResetClass = "dropdown__button dropdown__button_type_reset";

  .dropdown-guests
    h3.label!= labelText
    if labelRightText
      h3.label.label_right!= labelRightText
    div(class="dropdown js-dropdown-guests")
      div(class=`dropdown-guest__content js-expand__content ${ dropdownClassShow }`)
        +dropdown-item({
          itemDataType: "grownups",
          itemText: "Взрослые",
          itemDataOrder: 0,
          itemNumber: itemNumbers[0]
        })
        +dropdown-item({
          itemDataType: "kids",
          itemText: "Дети",
          itemDataOrder: 1,
          itemNumber: itemNumbers[1]
        })
        +dropdown-item({
          itemDataType: "infants",
          itemText: "Младенцы",
         itemDataOrder: 2,
         itemNumber: itemNumbers[2]
        })
        .dropdown__buttons
          button(
            type="submit"
            class=`${buttonSubmitClass} js-dropdown__button_type_submit`)
            != Применить
          button(
            type="reset"
            class=`${buttonResetClass} js-dropdown__button_type_reset`)
            != Очистить
      .dropdown__info.js-dropdown__info.js-expand__init
        input.dropdown__input.js-dropdown__input(
          readonly="" 
          type="text"
          placeholder="Сколько гостей" 
          name="guests" 
          value="")