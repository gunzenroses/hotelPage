include ../dropdown-item/dropdown-item.pug
include ../label/label.pug

mixin dropdown-guests({ labelText = '', dropdownClassShow = '', itemNumbers = [0, 0, 0], labelRightText = '' })
  - 
    const buttonSubmitClass = 'dropdown__button dropdown__button_type_submit';
    const buttonResetClass = 'dropdown__button dropdown__button_type_reset';

  .dropdown-guests
    +label({ labelText: labelText, labelRightText: labelRightText })
    div(class = 'dropdown js-dropdown-guests')
      div(
        class = `dropdown-guests__content js-expand ${ dropdownClassShow }`)
        +dropdown-item({
          itemDataType: 'grownups',
          itemText: 'Взрослые',
          itemDataOrder: 0,
          itemNumber: itemNumbers[0]
        })
        +dropdown-item({
          itemDataType: 'kids',
          itemText: 'Дети',
          itemDataOrder: 1,
          itemNumber: itemNumbers[1]
        })
        +dropdown-item({
          itemDataType: 'infants',
          itemText: 'Младенцы',
         itemDataOrder: 2,
         itemNumber: itemNumbers[2]
        })
        .dropdown__buttons
          button(
            type = 'button'
            class = `${ buttonSubmitClass } js-dropdown__button_type_submit`
            ) Применить
          button(
            type = 'button'
            class = `${ buttonResetClass } js-dropdown__button_type_reset`
            ) Очистить
      .dropdown__info.js-dropdown__info.js-expand__init
        input.dropdown__input.js-dropdown__input(
          type = 'text'
          placeholder = 'Сколько гостей' 
          name = 'guests' 
          value = '')