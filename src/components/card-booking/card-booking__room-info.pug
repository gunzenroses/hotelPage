mixin card-booking__room-info(bookingNumber, bookingType, bookingPrice, theme="")
  if theme == "in-uikit"
    .card__row
      .card__row_small
        span.card-booking__No №
        span.card-booking__number!= bookingNumber  
        span.card-booking__suite!= bookingType
      .card__row_small
        span.card-booking__price!= bookingPrice + "₽"
        span.card-booking__period &nbsp;в сутки
  else
    .card__row
      .card__row_small
        span.card-booking__No №
        span(class="card-booking__number" + "_" + theme)= bookingNumber  
        span(class="card-booking__suite" + "_" + theme)= bookingType
      .card__row_small
        span.card-booking__price!= bookingPrice + "₽"
        span.card-booking__period &nbsp;в сутки