include ../button-submit/button-submit.pug
include ../date-range/_separete/date-range_separate.pug
include ../dropdown-guests/dropdown-guests.pug

mixin card-booking({ priceInfos, itemNumbers=[0, 0, 0], theme="" })
  -
    var descriptionClass = theme === ""
      ? "card-booking__description" 
      : `card-booking__description card-booking__description_in-${ theme }`
  - 
    var infoSignClass = theme === ""
      ? "card-booking__info-sign" 
      : `card-booking__info-sign card-booking__info-sign_in-${ theme }`
  - 
    var totalPriceClass = theme === ""
      ? "card-booking__summary"
      : `card-booking__summary card-booking__summary_in-${ theme }`
  - 
    var infoNumberClass = theme === "uikit"
      ? "card-booking__number" 
      : `card-booking__number card-booking__number_in-${ theme }`
  -
    var infoSuiteClass = theme === "uikit"
      ? "card-booking__suite"
      ? `card-booking__suite card-booking__suite_in-${ theme }`
  - 
    var bookingLineClass = theme === "uikit"
      ? "card-booking__line card-booking__line_in-uikit"
      : "card-booking__line"

  form.card-booking(method="get" action="./search-room.html")
    .card__row
      .card__row_small
        span.card-booking__No №
        span(class=`${ infoNumberClass }`) "888"  
        span(class=`${ infoSuiteClass }`) "Люкс"
      .card__row_small
        span.card-booking__price!= "9 990₽"
    .card-booking__date-range
      +date-range_separate({
        inputValue_1: "19.08.2019",
        inputValue_2: "23.08.2019" 
      })
    .card-booking__dropdown_guests
      +dropdown-guests({
        labelText: "Гости",
        itemNumbers: itemNumbers
      })
    //- each priceInfo in priceInfos 
    //-   .card-booking__price-info
    //-     div(class= descriptionClass)= priceInfo.infoDesctiption
    //-       if priceInfo.infoSign === "full"
    //-         div(class= infoSignClass)
    //-     .card-booking__expense!= `${ priceInfo.infoPrice }₽`
    div(class= totalPriceClass)
      .card-booking__text Итого
      div(class= `${ bookingLineClass }`)
      .card-booking__text 38 081₽
    .card-booking__button
      +button-submit({ 
        buttonText: "Забронировать",
        theme: theme
      })