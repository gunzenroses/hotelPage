include ../button-like/_button-like.pug

mixin comment(commentData)
  - var {authorPic="", authorName="Anonymous", commentTime=Data().getDay(), buttonLikeId, buttonNumber=0, commentText="none"} = commentData
  .widget
    .comment
      .comment__head
        .author__pic
          img(src=authorPic alt="profile picture")
        .info__form
          div(class="info__title")= authorName
          div(class="info__description")= commentTime
      .comment__body
        .comment__likes
          +buttonLikeItem(buttonLikeId, buttonNumber)
        .comment__text!= commentText