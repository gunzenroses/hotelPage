//-include ../buttonLike/_buttonLike.pug

mixin comment(authorPic, authorName, commentTime, buttonLikeId, buttonNumber, commentText)
    .widget
        .comment
            .comment__head
                .author__pic
                    img(src=authorPic alt="profile picture")
                .info__description
                    div(class="info__main")= authorName
                    div(class="info__additional")= commentTime
            .comment__body
                .comment__likes
                    +buttonLikeItem(buttonLikeId, buttonNumber)
                div(class="comment__text")= commentText