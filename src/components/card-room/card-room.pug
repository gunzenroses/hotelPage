include ../button-rate/button-rate.pug
include ../room-carousel/room-carousel.pug

mixin card-room({ roomOptions, theme = '' })
  -
    const {
      src, 
      bookingNumber, 
      bookingType, 
      bookingPrice, 
      starName, 
      starRate, 
      reviewAmount} = roomOptions;

    const cardRoomClass = theme === ''
      ? 'card-room'
      : `card-room card-room_in_${ theme }`

  div(class = cardRoomClass)
    +room-carousel({
      roomPictures: src,
      nameForPictures: `room ${ bookingNumber }`
    })
    .card-room__info
      .card__row
        .card__group
          span.card-room__sign №
          span.card-room__number!= bookingNumber
          span.card-room__type!= bookingType 
        .card__group
          span.card-room__price!= `${bookingPrice}₽`
          span.card-room__period &nbsp;в сутки
      .card-room__rating
        .card-room__button-rate
          +button-rate({
            inputName: starName,
            checkedNum: starRate
          })
        .card__group
          span.card-room__price!= reviewAmount
          span.card-room__review  Отзывов