include ../../calendar/calendar.pug

mixin date-range_common({ labelText="", inputValue="19 авг - 23 авг", dropdownClassShow="", theme="" })
  -  
    var className = theme === "search" 
      ? `date-range__info date-range__info_in-${ theme }` 
      : "date-range__info"

  div.date-range.js-date-range
    div(
      class=`date-range__calendar js-date-range__calendar js-expand__content ${
      dropdownClassShow }`)
      +calendar()
    .date-range__selector.date-range__selector_common.js-expand__init
      .date-range__item
        h3.date-range__label!= labelText
        div(class= className)
          input(
            class="date-range__input" 
            type="text" 
            value=inputValue
            name="checkin-checkout"
            placeholder="ДД.ММ.ГГГГ"
            maxlength=15
            data-range="date-range" 
            readonly) 