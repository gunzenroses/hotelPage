include ../date-range/date-range_separate.pug
include ../dropdown/_type_guests/dropdown_type_guests.pug
include ../button/button_type_submit.pug

mixin card-search()
  form.card-search(method="get" action="./search-room.html")
    h1.card__title Найдём номера под ваши пожелания
    .card-search__calendar
      +date-range_separate("calendar_search", "Прибытие", "", "Выезд", "", "")
    .card-search__guests
      +dropdown_type_guests("Гости", "dropdown_guests_search", "", "dropdownGuestsInput_3")
    .card-search__button
      +button_type_submit("Подобрать номер", "room_search.html")
