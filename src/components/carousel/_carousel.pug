mixin carousel(roomPictures, nameForPictures)
    - let counter = 1;
    .carousel
        .carousel__radio
            for picture in roomPictures
                label.carousel__element
                    if counter === 1
                        input(type="radio" checked="checked" name=nameForPictures value="picture_" + counter++).carousel__radio_real
                        div.carousel__radio_fake
                    else
                        input(type="radio" name=nameForPictures value="picture_" + counter++).carousel__radio_real
                        div.carousel__radio_fake
        .carousel__pictures
            for picture in roomPictures
                .carousel__pic
                    img(src= picture alt="room pictures")
        .carousel__btn
            .carousel__btn_prev
            .carousel__btn_next

