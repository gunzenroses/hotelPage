extend ./assets/templates/template.pug

block variables
  - var title = "Hotel page";
  - var description = "navigation";
  - var keywords = "navigation, hotel pages";
  - 
    var pages = [
      {
        name: "UIKit",
        href: "./UIKit.html",
        src: "./assets/images/navigation/uikit.jpg",
      },
      {
        name: "Landing page",
        href: "./landing-page.html",
        src: "./assets/images/navigation/landing-page.jpg",
      },
      {
        name: "Search room",
        href: "./search-room.html",
        src: "./assets/images/navigation/search-room.jpg",
      },
      {
        name: 'Room details',
        href: "./room-details.html",
        src: "./assets/images/navigation/room-details.jpg",
      },
      {
        name: "Registration",
        href: "./registration.html",
        src: "./assets/images/navigation/registration.jpg",
      },
      {
        name: "Sign in",
        href: "./signin.html",
        src: "./assets/images/navigation/signin.jpg",
      }
    ]

block content
  main.index-content
    ul.navigation
      each page in pages
        - var { href, name, src } = page
        li.navigation__item
          a(href = href).navigation__link
            img.navigation__pic(alt = name src = src)
            
    