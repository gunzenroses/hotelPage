block variables
  - var title = "UIKit";
  - var description = "UIKit";
  - var keywords = "UIKit";
  - 
    var { 
      checkboxList, 
      comment1 
    } = require("Pages/UIKit/form-elements/form-elements.json");

block content
  .form-elements
    img.uikit__logo(src= "./assets/images/logo/logo.svg" alt="uikit logo")
    .form-elements__content
      .form-elements__textfields
        .form-elements__container-first
          .form-elements__email
            .textfield__container
              +label({
                labelText: "Text field", 
                labelRightText: "default", 
                labelRightClass: "email"
              })
              +textfield_type_email()
          .form-elements__name
            .textfield__container
              +label({
                labelText: "Text field", 
                labelRightText: "hover / focus", 
                labelRightClass: "name"
              })
              +textfield({
                placeholder: "Text", 
                valueText: "This is pretty awesome", 
                nameText: "text", 
                maxText: 20
              })
          .form-elements__guests.js-dropdown__detection
            +dropdown-guests({
              labelText: "dropdown",
            })
          .form-elements__birthday
            +textfield_type_birthday({
              labelLeft: "Masked text field",
              labelRight: ""
            })
        .form-elements__container-second
          .form-elements__date-range_separate.js-dropdown__detection
            +date-range_separate({
              inputValue_2: "19.08.2019" 
            })
          .form-elements__date-range_common.js-dropdown__detection
            +date-range_common({
              labelText: "filter date dropdown",
            })
          .form-elements__subscibe
            .textfield__container
              +label({ 
                labelText: "Subscription text field" 
              })
              +textfield_type_subscribe()
      .form-elements__input-buttons
        .form-elements__checkbox
          h3.label Сheckbox buttons
          +checkbox
        .form-elements__radio 
          h3.form-elements__label.form-elements__label_radio Radio buttons
          +radio-buttons({ }) 
        .form-elements__toggle
          h3.form-elements__label.form-elements__label_toggle Toggle
          .form-elements__group_toggle
            +button-toggle({
              inputName: "offer1",
              ifChecked: true
            })
            +button-toggle({ inputName: "offer2" })
        .form-elements__button-like
          h3.label like button
          .form-elements__row
            +button-like(2)
            +button-like(12)
        .form-elements__button-rate
          h3.form-element__label_button-rate Rate button
          .form-elements__row
            +button-rate({
              inputName: "rating",
              checkedNum: 4
            })
            +button-rate({
              inputName: "rating2",
              checkedNum: 5
            })
      .form-elements__clickable-objects
        .form-elements__range
          +range({ })
        .form-elements__buttons
          h3.form-elements__label.form-elements__label_buttons Buttons
          .form-elements__row_buttons-link
            .form-elements__button-item
              +button-link({
                buttonText: "Click me",
                buttonOnclick: "./some-address",
                className: "colored"
              })
            .form-elements__button-item
              +button-link({
                buttonText: "Click me",
                buttonOnclick: "./some-address",
                className: "colored"
              })
            .form-elements__button-item
             +button-link({
               buttonText: "Click me",
               buttonOnclick: "./some-address",
               className: ""
              })
            .form-elements__button-item
             +button-link({
               buttonText: "Click me",
               buttonOnclick: "./some-address",
               className: ""
              })
          .form-elements__row_buttons-basic
            +button({ 
              buttonText: "Click me",
              buttonOnclick: "./some-address" 
            })
            +button({
              buttonText: "Click me",
              buttonOnclick: "./some-address"
            })
          .form-elements__button-submit 
            +button-submit({ buttonText: "Перейти к оплате" })
        .form-elements__pagination
            h3.label pagination
            +pagination()
      .form-elements__dropdowns
        .form-elements__room-criterions
          .form-elements__rooms.js-dropdown__detection
            +dropdown-rooms({
              labelText: "dropdown",
              labelRightText: "default",
              itemNumbers: [2, 2, 0],
            })
          .form-elements__rooms.js-dropdown__detection
            +dropdown-rooms({
              labelText: "dropdown",
              dropdownClassShow: "js-expand__show",
              labelRightText: "expanded",
              itemNumbers: [2, 2, 0],
            })
        .form-elements__checkbox-rolled-up
          +checkbox-expandable({
            dropdownTitleName: "Expandable checkbox list"
          })
        .form-elements__checkbox-expand
          +checkbox-expandable({
            dropdownTitleName: "Expandable checkbox list",
            dropdownClassShow: "js-checkbox-expandable__show",
          })
      .form-elements__search-info
        .form-elements__guests_open.js-dropdown__detection
          +dropdown-guests({
            labelText: "dropdown",
            dropdownClassShow: "js-expand__show"
          })
        .form-elements__rich-checkbox
          +rich-checkbox({
            checkboxName: "accessibility",
            containerText: "Rich Checkbox Buttons"
          })
      .form-elements__room-info
        .form-elements__guests_open.js-dropdown__detection
          +dropdown-guests({
            labelText: "dropdown",
            dropdownClassShow: "js-expand__show",
            itemNumbers: [2, 1, 0],
          })
        .form-elements__bullet-checkbox
          +bullet-checkbox({
            checkboxList: checkboxList,
            labelText: "bullet list"
          })
      .form-elements__badges
        +badge({ 
          name: "insert_emoticon",
          title: "Комфорт",
          description: "Шумопоглощающие стены" 
        })
        .form-elements__badge
          +badge({ 
            name: "location_city",
            title: "Удобство",
            description: "Окно в каждой из спален"
          })
      .form-elements__comment
        +comment(comment1)
