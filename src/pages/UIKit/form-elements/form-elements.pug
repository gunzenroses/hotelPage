block variables
  - var title = "UIKit";
  - var description = "UIKit";
  - var keywords = "UIKit";
  - 
    var checkboxList = [
      "Нельзя с питомцами", "Без вечеринок и мероприятий", 
      "Время прибытия — после 13:00, а выезд до 12:00"
    ];
