block content
  .form-elements
    img.uikit-logo(src= "./assets/images/logo/logo.svg" alt="uikit logo")
    .form-elements__content
      .form-elements__group_first
        .form-elements__container_first
          .form-elements__container_email
            .textfield__container
              +textfield__label({
                labelText: "Text field", 
                labelRightText: "default", 
                labelRightClass: "textfield__label_for-email"
              })
              +textfield_type_email()
          .form-elements__container_name
            .textfield__container
              +textfield__label({
                labelText: "Text field", 
                labelRightText: "hover / focus", 
                labelRightClass: "textfield__label_for-name"
              })
              +textfield({
                placeholder: "Text", 
                valueText: "This is pretty awesome", 
                nameText: "text", 
                maxText: 20
              })
          .form-elements__container_guests.js-dropdown__detection
            +dropdown_type_guests({
              labelText: "dropdown", 
              dropdownContainerId: "dropdown_guests_0",
              inputId: "dropdownGuestsInput_0"
            })
          .form-elements__container_birthday
            +textfield_type_birthday({
              labelLeft: "Masked text field",
              labelRight: ""
            })
        .form-elements__container_second
          .form-elements__container_date-range_separate.js-dropdown__detection
            +date-range_separate({ 
              calendarId: "calendar1",
              labelText_1: "Date dropdown",
              labelText_2: "Date dropdown",
              inputValue_2: "19.08.2019" 
            })
          .form-elements__container_date-range_common.js-dropdown__detection
            +date-range_common({
              calendarId: "calendar2", 
              labelText: "filter date dropdown", 
              inputValue: "19 авг - 23 авг"
            })
          .form-elements__container_subscibe
            .textfield__container
              +textfield__label({ labelText: "Subscription text field" })
              +textfield_type_subscribe()
      .form-elements__group_second
        .form-elements__container_checkbox
          h3.label Сheckbox buttons
          +checkbox
        .form-elements__container_radio 
          .form-elements__label_radio Radio buttons
          +radio-buttons({ inputId: "customer-gender" }) 
        .form-elements__container_toggle
          .form-elements__label_toggle Toggle
          .form-elements__group_toggle
            +button-toggle({
              inputName: "offer1",
              ifChecked: true
            })
            +button-toggle({ inputName: "offer2" })
        .form-elements__container_button-like
          h3.label like button
          .form-elements__row
            +button-like({
              buttonId: "buttonLike_1",
              buttonNumber: 2
            })
            +button-like({
              buttonId: "buttonLike_2",
              buttonNumber: 12
            })
        .form-elements__container_button-rate
          h3.form-element__label_button-rate Rate button
          .form-elements__row
            +button-rate({
              inputName: "rating",
              checkedNum: 4
            })
            +button-rate({
              inputName: "rating2",
              checkedNum: 5
            })
      .form-elements__group_third
        .form-elements__container_range
          +range({ rangeId: "range_1" })
        .form-elements__container_buttons
          h3.form-elements__label_buttons Buttons
          .form-elements__row_buttons-link
            .form-elements__button-item
              +button-link({
                buttonText: "Click me",
                buttonOnclick: "./some-address",
                className: "colored"
              })
            .form-elements__button-item
              +button-link({
                buttonText: "Click me",
                buttonOnclick: "./some-address",
                className: "colored"
              })
            .form-elements__button-item
             +button-link({
               buttonText: "Click me",
               buttonOnclick: "./some-address",
               className: ""
              })
            .form-elements__button-item
             +button-link({
               buttonText: "Click me",
               buttonOnclick: "./some-address",
               className: ""
              })
          .form-elements__row_buttons-basic
            +button({ 
              buttonText: "Click me",
              buttonOnclick: "./some-address" 
            })
            +button({
              buttonText: "Click me",
              buttonOnclick: "./some-address"
            })
          .form-elements__button-submit 
            +button-submit({ buttonText: "Перейти к оплате" })
        .form-elements__container_pagination
            h3.label pagination
            +pagination("pagination_bar_1")
      .form-elements__group_forth
        .form-elements__container_dropdowns
          .form-elements__container_rooms.js-dropdown__detection
            +dropdown_type_rooms({
              labelText: "dropdown",
              dropdownContainerId: "dropdown_rooms_1",
              inputId: "dropdownRoomsInput_1",
              labelRightText: "default"
            })
          .form-elements__container_rooms.js-dropdown__detection
            +dropdown_type_rooms({
              labelText: "dropdown",
              dropdownContainerId: "dropdown_rooms_2",
              dropdownClassShow: "js-expand__show",
              inputId: "dropdownRoomsInput_2",
              labelRightText: "expanded"
            })
        .form-elements__container_checkbox-expand_hidden.js-dropdown__detection
          +checkbox-expandable({
            dropdownTitleName: "Expandable checkbox list"
          })
        .form-elements__container_checkbox-expand.js-dropdown__detection
          +checkbox-expandable({
            dropdownTitleName: "Expandable checkbox list",
            dropdownClassShow: "js-expand__show"
          })
      .form-elements__group_fifth
        .form-elements__container_guests_open.js-dropdown__detection
          +dropdown_type_guests({
            labelText: "dropdown", 
            dropdownContainerId: "dropdown_guests_1", 
            dropdownClassShow: "js-expand__show", 
            inputId: "dropdownGuestsInput_1"
          })
        .form-elements__container_rich-checkbox
          +rich-checkbox({
            checkboxName: "accessibility",
            containerText: "Rich Checkbox Buttons"
          })
      .form-elements__group_sixth
        .form-elements__container_guests_open.js-dropdown__detection
          +dropdown_type_guests({
            labelText: "dropdown", 
            dropdownContainerId: "dropdown_guests_2", 
            dropdownClassShow: "js-expand__show", 
            inputId: "dropdownGuestsInput_2"
          })
        .form-elements__container_bullet-checkbox
          +bullet-checkbox({
            checkboxList: checkboxList,
            labelText: "bullet list"
          })
      .form-elements__group_seventh
        +badge({ 
          name: "insert_emoticon",
          title: "Комфорт",
          description: "Шумопоглощающие стены" 
        })
        .form-elements__container_badge
          +badge({ 
            name: "location_city",
            title: "Удобство",
            description: "Окно в каждой из спален"
          })
      .form-elements__group_eighth
        +comment(comment1)
