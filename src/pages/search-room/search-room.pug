                h3.label Правила дома
                +checkbox
            .filter-group
              .filter-group__accessibility
                +rich-checkbox("accessibility", "Доступность")
              .filter-group__rooms
                +dropdown_type_rooms("Удобства номера", "dropdown_rooms_1", "", "dropdownRoomsInput_1")
