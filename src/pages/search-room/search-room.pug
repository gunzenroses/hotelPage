block content
  .search-room.js-dropdown__detection
    +header("", theme)
    .search-room__content_outer
      .search-room__content
        .search-room__filter
          form(class="search-room__form")
            .filter-group
              .filter-group__date-range
                +date-range_common("calendar_search", "даты пребывания в отеле", "19 авг - 23 авг", "", "in-search")
              .filter-group__guests
                +dropdown_type_guests("гости", "dropdown_guests_search", "", "dropdownGuestsInput_3")
              .filter-group__price-range
                +range("range_1", true, "Диапазон цены")
              .filter-group__rules
                .widget
                  h3.label Правила дома
                  .checkbox__container
                    +checkbox("smoking_allowed", "house-rules", false, "Можно курить")
                    +checkbox("pets_allowed", "house-rules", true, "Можно с питомцами")
                    +checkbox("guests_allowed", "house-rules", true, "Можно пригласить гостей (до 10 человек)")
            .filter-group
              .filter-group__accessibility
                +rich-checkbox("accessibility", "Доступность")
              .filter-group__rooms
                +dropdown_type_rooms("Удобства номера", "dropdown_rooms_1", "", "dropdownRoomsInput_1")
              .filter-group__extras
                +checkbox-expandable("Дополнительные удобства", "")
        .search-room__rooms
          .search-room__text Номера, которые мы для вас подобрали
          .search-room__result
            for room in roomsList 
              +card-room(room)
          .search-room__pagination 
            +pagination("paginationSearch")
    +footer("in-search")